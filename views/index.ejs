<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; }
    .main-container { display: flex; height: 100vh; }
    .chat-panel { background: #fff; border-right: 2px solid #dee2e6; display: flex; flex-direction: column; }
    .chat-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: #fff; padding: 20px; border-bottom: 1px solid #dee2e6; }
    .chat-messages { flex: 1; overflow-y: auto; padding: 20px; }
    .msg-user { background: #f3e5f5; padding: 12px; border-radius: 8px; margin: 10px 0; border-left: 4px solid #9c27b0; text-align: right; }
    .msg-bot { background: #e3f2fd; padding: 12px; border-radius: 8px; margin: 10px 0; border-left: 4px solid #2196F3; }
    .chat-input-area { padding: 15px; border-top: 1px solid #dee2e6; background: #f8f9fa; }
    .theme-display { background: #fff; overflow-y: auto; padding: 20px; }
    .page-section { background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%); border-radius: 12px; padding: 20px; margin: 15px 0; border: 1px solid #dee2e6; }
    .page-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: #fff; padding: 15px; border-radius: 8px; margin-bottom: 15px; display: flex; justify-content: space-between; align-items: center; }
    .page-actions { display: flex; gap: 8px; }
    .page-actions button { padding: 6px 12px; font-size: 12px; }
    .component-badge { display: inline-block; background: #e3f2fd; color: #1976d2; padding: 6px 12px; border-radius: 20px; font-size: 12px; margin: 4px; }
    .layout-badge { display: inline-block; padding: 8px 15px; border-radius: 5px; font-weight: bold; margin: 5px 0; }
    .layout-free { background: #d4edda; color: #155724; }
    .layout-pro { background: #fff3cd; color: #856404; }
    .session-controls { background: #f8f9fa; padding: 10px; border-bottom: 1px solid #dee2e6; font-size: 12px; }
  </style>
</head>
<body>
  <div class="main-container">
    <!-- Left Chat Panel -->
    <div class="col-lg-3" style="flex: 0 0 30%; display: flex; flex-direction: column;">
      <div class="chat-header">
        <h5 class="mb-0">üé® Theme AI</h5>
        <small>Conversational Theme Generator</small>
      </div>
      
      <div class="session-controls">
        Session ID: <code id="sessionId" style="font-size: 10px;">new</code>
        <button class="btn btn-sm btn-outline-danger float-end" onclick="clearSession()" style="font-size: 10px; padding: 2px 6px;">üîÑ Clear</button>
      </div>

      <div class="chat-messages" id="chatMessages"></div>

      <div class="chat-input-area">
        <div class="mb-3">
          <label class="form-label"><small><strong>Plan:</strong></small></label>
          <select id="planSelect" class="form-select form-select-sm">
            <option value="free">Free</option>
            <option value="paid">Paid</option>
          </select>
        </div>
        <div class="input-group input-group-sm">
          <input type="text" id="userInput" class="form-control" placeholder="Describe your theme..." onkeypress="if(event.key==='Enter') sendMessage()">
          <button class="btn btn-primary" onclick="sendMessage()">Send</button>
        </div>
      </div>
    </div>

    <!-- Right Display Panel -->
    <div class="col-lg-9 theme-display" style="flex: 1;">
      <div id="displayArea">
        <div class="alert alert-light text-center mt-5">
          <h4>üé® Theme Generator</h4>
          <p>Start by describing your theme idea...</p>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let sessionId = null;
    let conversationHistory = [];
    let lastTheme = null;

    function initSession() {
      sessionId = 'session_' + Date.now();
      document.getElementById('sessionId').textContent = sessionId.substring(0, 12) + '...';
      conversationHistory = [];
    }

    function clearSession() {
      if (confirm('Clear all conversation history?')) {
        initSession();
        document.getElementById('chatMessages').innerHTML = '';
        document.getElementById('displayArea').innerHTML = `
          <div class="alert alert-light text-center mt-5">
            <h4>üîÑ Session Cleared</h4>
            <p>Start a new conversation...</p>
          </div>
        `;
      }
    }

    async function sendMessage() {
      const msg = document.getElementById('userInput').value.trim();
      const plan = document.getElementById('planSelect').value;
      if (!msg) return;

      // Add to conversation
      conversationHistory.push({ role: 'user', content: msg });
      addChatMessage('user', msg);
      document.getElementById('userInput').value = '';

      try {
        document.getElementById('displayArea').innerHTML = `<div class="alert alert-info" style="margin-top: 20px;"><strong>üîÑ Generating theme...</strong> Processing your request with AI...</div>`;

        const res = await fetch('/api/theme/generate', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({message: msg, plan, session_id: sessionId, history: conversationHistory})
        });

        const data = await res.json();
        if (data.success) {
          lastTheme = data.theme;
          displayTheme(data.theme);
          addChatMessage('bot', `‚úì Theme generated!\nüìä Pages: ${data.theme.summary.total_component_pages}\nüìê Layouts: ${data.theme.summary.total_layout_pages}\nüéØ Style: ${data.theme.theme_style}`);
        } else {
          addChatMessage('bot', `‚ùå Error: ${data.error}`);
        }
      } catch(e) {
        addChatMessage('bot', `‚ùå Error: ${e.message}`);
      }
    }

    function addChatMessage(sender, text) {
      const msgDiv = document.getElementById('chatMessages');
      const msgClass = sender === 'user' ? 'msg-user' : 'msg-bot';
      msgDiv.innerHTML += `<div class="${msgClass}">${text.replace(/\n/g, '<br>')}</div>`;
      msgDiv.scrollTop = msgDiv.scrollHeight;
    }

    function displayTheme(theme) {
      const display = document.getElementById('displayArea');
      let html = `<h4>‚úì ${theme.theme_style} Theme</h4>`;

      // Component Pages
      html += `<h5 class="mt-4">üìÑ Component Pages (7)</h5>`;
      const pageKeys = Object.keys(theme.component_pages || {});
      pageKeys.forEach(pageName => {
        const page = theme.component_pages[pageName];
        const comps = page.components || [];
        const compNames = comps.map(c => c.title).join(', ') || 'No components';
        
        html += `
          <div class="page-section">
            <div class="page-header">
              <div><strong>${page.page_title}</strong> <small>(${comps.length} components)</small></div>
              <div class="page-actions">
                <button class="btn btn-sm btn-info" onclick="viewPageJSON('${pageName}')">View</button>
                <button class="btn btn-sm btn-success" onclick="downloadPageJSON('${pageName}')">Download</button>
                <button class="btn btn-sm btn-warning" onclick="copyPageJSON('${pageName}')">Copy</button>
              </div>
            </div>
            <div style="margin-top: 10px;">
              <strong>Components:</strong><br/>
              <div>${comps.map(c => `<span class="component-badge">${c.title}</span>`).join('')}</div>
            </div>
          </div>
        `;
      });

      // Layout Pages
      html += `<h5 class="mt-4">üìê Layout Pages (5)</h5>`;
      const layoutKeys = Object.keys(theme.layout_pages || {});
      layoutKeys.forEach(pageName => {
        const layout = theme.layout_pages[pageName];
        const badgeClass = layout.plan === 'pro' ? 'layout-pro' : 'layout-free';
        
        html += `
          <div class="page-section">
            <div class="page-header">
              <div><strong>${layout.page_title}</strong></div>
              <div class="page-actions">
                <button class="btn btn-sm btn-info" onclick="viewLayoutJSON('${pageName}')">View</button>
                <button class="btn btn-sm btn-success" onclick="downloadLayoutJSON('${pageName}')">Download</button>
                <button class="btn btn-sm btn-warning" onclick="copyLayoutJSON('${pageName}')">Copy</button>
              </div>
            </div>
            <div style="margin-top: 10px;">
              <span class="layout-badge ${badgeClass}">Layout #${layout.layout_number} - ${layout.layout_name}</span>
              <br/><small class="text-muted">File: ${layout.ejs_file}</small>
            </div>
          </div>
        `;
      });

      display.innerHTML = html;
    }

    // Per-page JSON actions
    function viewPageJSON(pageName) {
      if (!lastTheme || !lastTheme.component_pages[pageName]) return;
      const json = JSON.stringify(lastTheme.component_pages[pageName], null, 2);
      showJSONModal(json, pageName);
    }

    function downloadPageJSON(pageName) {
      if (!lastTheme || !lastTheme.component_pages[pageName]) return;
      const json = JSON.stringify(lastTheme.component_pages[pageName], null, 2);
      downloadJSON(json, `${pageName}-page.json`);
    }

    function copyPageJSON(pageName) {
      if (!lastTheme || !lastTheme.component_pages[pageName]) return;
      const json = JSON.stringify(lastTheme.component_pages[pageName], null, 2);
      navigator.clipboard.writeText(json).then(() => alert('‚úì Copied!')).catch(e => alert('Copy failed: ' + e));
    }

    function viewLayoutJSON(pageName) {
      if (!lastTheme || !lastTheme.layout_pages[pageName]) return;
      const json = JSON.stringify(lastTheme.layout_pages[pageName], null, 2);
      showJSONModal(json, pageName);
    }

    function downloadLayoutJSON(pageName) {
      if (!lastTheme || !lastTheme.layout_pages[pageName]) return;
      const json = JSON.stringify(lastTheme.layout_pages[pageName], null, 2);
      downloadJSON(json, `${pageName}-layout.json`);
    }

    function copyLayoutJSON(pageName) {
      if (!lastTheme || !lastTheme.layout_pages[pageName]) return;
      const json = JSON.stringify(lastTheme.layout_pages[pageName], null, 2);
      navigator.clipboard.writeText(json).then(() => alert('‚úì Copied!')).catch(e => alert('Copy failed: ' + e));
    }

    function showJSONModal(json, title) {
      alert(`${title.toUpperCase()} JSON:\n\n${json.substring(0, 500)}...\n\n(Full JSON - use Download or Copy for complete data)`);
    }

    function downloadJSON(json, filename) {
      const el = document.createElement('a');
      el.href = 'data:text/json;charset=utf-8,' + encodeURIComponent(json);
      el.download = filename;
      el.click();
    }

    // Initialize
    initSession();
  </script>
</body>
</html>
